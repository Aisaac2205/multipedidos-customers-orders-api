# Microservicio A - Clientes y Pedidos
# Variables de Entorno para Railway
# RENOMBRAR ESTE ARCHIVO A: .env.example

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS (MySQL)
# ============================================
# Obtener estos valores desde Railway → Base de Datos → Variables

# URL completa de conexión JDBC
DATABASE_URL=jdbc:mysql://maglev.proxy.rlwy.net:20814/railway?allowPublicKeyRetrieval=true&useSSL=false

# Host de la base de datos
MYSQL_HOST=maglev.proxy.rlwy.net

# Puerto de la base de datos
MYSQL_PORT=20814

# Nombre de la base de datos
MYSQL_DATABASE=railway

# Usuario de la base de datos
MYSQL_USER=root

# Contraseña de la base de datos
MYSQL_PASSWORD=TU_PASSWORD_AQUI

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================

# Puerto del microservicio (Railway lo asigna automáticamente)
PORT=8080

# Puerto interno de Spring Boot
SERVER_PORT=8080

# ============================================
# CONFIGURACIÓN DE SPRING BOOT
# ============================================

# Perfil de Spring (development, production)
SPRING_PROFILES_ACTIVE=production

# Nivel de logs
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_MULTIPEDIDOS=DEBUG

# ============================================
# CONFIGURACIÓN DE JPA/HIBERNATE
# ============================================

# Estrategia de DDL (create, update, validate, none)
# IMPORTANTE: Usar 'update' para Railway
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Mostrar SQL en logs (true/false)
SPRING_JPA_SHOW_SQL=false

# ============================================
# INFORMACIÓN DE LA APLICACIÓN
# ============================================

APP_NAME=Microservicio Clientes y Pedidos
APP_VERSION=1.0.0
APP_DESCRIPTION=API para gestión de clientes y pedidos

